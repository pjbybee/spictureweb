<h3>
  <br/>
  <br/>
  Add Contact
</h3>

<div>
  <%= form_for @c2g, :url => insert_contact_groups_path do |f| %>
    <%= f.hidden_field :group_id %>
    <%= f.select(:contact_id, current_user.contacts.all.reject {|c| 
                                                        c.groups.collect(&:id).include?(params[:group_id].to_i)
                                                       }.collect{|c| 
                                                         ["#{c.name}: #{c.email}", c.id]
                                                       }, { :include_blank => true }
                ) 
    %>

    <%= f.submit("Add Contact") %>
  <% end %>
</div>
