<h3>
  Remove Picture
</h3>

<div>
  <ul>
    <% @album.pictures.all.each do |p| %>
       <li>
          <%= link_to image_tag(p.image_url, :width => 72, :height => 72), drop_picture_albums_path(
                                                                              :album_id => params[:album_id], 
                                                                              :picture_id => p.id), 
                                                                              :method => :post 
          %>
       </li>
    <% end %>
  </ul>
</div>
